{
  "include": ["../router/src/global.d.ts", "../router/src/**/*.ts"],
  "exclude": ["../*/__tests__/**/*.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "..",
    "outDir": "dist",
    "sourceMap": false,
    "noEmit": true,
    "paths": {
      "vue-router": ["../router/src"]
    },

    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": true,

    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["node"]
  }
}
